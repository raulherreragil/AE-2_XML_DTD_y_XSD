            <titulo_libro>Érase una vez el cuerpo humano: La vista</titulo_libro>
            <capitulos_libro>
                <capitulo_libro num_paginas_capitulo="10">
                    <titulo_capitulo>Título capitulo 1</titulo_capitulo>
